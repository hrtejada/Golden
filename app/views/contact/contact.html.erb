<% provide(:title, 'Contact Us') %>
<!-- Container -->
<div class="container">

        <!-- Page Heading/Breadcrumbs -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Contact
                    <small>Golden Vapor</small>
                </h1>
                <ol class="breadcrumb">
                    <li><%= link_to "Home", root_path %></li>
                    <li class="active">Contact</li>
                </ol>
            </div>
        </div><!--Pege Heading/Breadcrumbs -->

  <!--Row-->
  <div class="row">
    <!-- Embedded Google Map -->
    <div class="col-md-8">
      <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3391.083118717715!2d-106.35107318484263!3d31.79548458127951!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x86e75ad289a3687d%3A0xcdfb0d0e9dcce727!2s10024+Montana+Ave%2C+El+Paso%2C+TX+79925!5e0!3m2!1sen!2sus!4v1453489991374" width="100%" height="400px" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe>
    </div><!-- Embedded Google Map -->

    <!--Contact Informattion Div -->
    <div class="col-xs-4">
      <h3 align="left">Contact Details</h3>
      </br>
      <p class="text-left"><i class="fa fa-map-marker"></i> 10024 Montana Ave. </p>
      <p class="text-left"><i class="fa fa-globe"></i> El Paso Tx 79925 </p>
      <p class="text-left"> <i class="fa fa-phone"></i>  915.594.6650 </p>
      <p class="text-left"> <i class="fa fa-envelope"></i>  hr.tejada121@gmail.com </p>
      <p class="text-left"> <i class="fa fa-clock-o"></i>  Monday - Friday: 9:00 AM to 5:00 PM </p>

      <ul class="list-unstyled list-inline list-social-icons">
        <li><a href="https://www.facebook.com/GoldenVaporCo"><i class="fa fa-facebook-square fa-2x"></i></a></li>
        <li><a href="https://www.instagram.com/golden_vapor/"><i class="fa fa-instagram fa-2x"></i></a></li>
        <li><a href="#"><i class="fa fa-twitter-square fa-2x"></i></a></li>
      </ul>

    </div><!--Contact Informattion Div -->
  </div><!--Row-->

  <div class="row"><!--Second Row -->
    <!--Email form -->
    <div class="col-xs-8">
      </br>
      <h4> Send us a message!</h4>
      <%= form_for(:contact, url: contact_path) do |f| %>

      <%= f.label :"email:" %>
      <%= f.email_field :email, :required => true, class: 'form-control' %>

      <%= f.label :"Name:" %>
      <%= f.text_field :name, :required => true, class: 'form-control' %>

      <%= f.label :"Message:" %>
      <%= f.text_area :message, :required => true, rows: "10", class: 'form-control' %>

      <%= f.submit "Send Message", class: "btn btn-primary" %>
      <% end %>
    </div><!-- Email Form -->

  </div><!--Second Row -->

</div><!-- Container -->
